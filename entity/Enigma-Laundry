CREATE TABLE mst_customer (
    id INT NOT NULL PRIMARY KEY,
    customer_name VARCHAR(20) NOT NULL,
    email VARCHAR(20),
    no_hp VARCHAR(20)
);

CREATE TABLE mst_service (
    id INT NOT NULL PRIMARY KEY,
    customer_id INT NOT NULL,
    jenis_layanan VARCHAR(20) NOT NULL, 
    jumlah INT NOT NULL,
	satuan VARCHAR NOT NULL,
    harga INT NOT NULL,
    FOREIGN KEY (customer_id) REFERENCES mst_customer (id)
);

CREATE TABLE transaction (
    id INT NOT NULL PRIMARY KEY,
    customer_id INT NOT NULL,
    service_id INT NOT NULL,
    tanggal_masuk DATE NOT NULL,
    tanggal_keluar DATE NOT NULL,
    pelayan VARCHAR(20) NOT NULL,
    total_harga INT NOT NULL,
    FOREIGN KEY (customer_id) REFERENCES mst_customer(id),
    FOREIGN KEY (service_id) REFERENCES mst_service(id)
);

